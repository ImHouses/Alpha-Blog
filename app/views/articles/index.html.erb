<h1>Listing articles</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td class="list-button"><%= link_to("Show", article_path(article),
                                                  class: "btn btn-xs btn-success") %></td>
      <td class="list-button">
        <%= link_to("Edit", edit_article_path(article),
                            class: "btn btn-xs btn-primary") %>
      </td>
      <td class="list-button">
        <%= link_to("Delete", article_path(article),
                              method: :delete,
                              data: {confirm: "Are you sure of deleting this article?"},
                              class: "btn btn-xs btn-primary") %>
      </td>
    </tr>
  <% end %>
</table>
